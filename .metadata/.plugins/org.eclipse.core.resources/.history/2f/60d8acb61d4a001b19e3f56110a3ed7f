package ejercicioTraineeJavaObjetos;


public class main {

	public static void main(String[] args) {
		
		
     //Marca: Peugeot // Modelo: 206 // Puertas: 4 // Precio: $200.000,00
	 auto Auto1 = new auto("Peugeot","206",4,0,200000);
	 //Marca: Honda // Modelo: Titan // Cilindrada: 125cc // Precio: $60.000,00
	 auto Auto2 = new auto("Honda","Titan",4,125,60000);
	 //Marca: Peugeot // Modelo: 208 // Puertas: 5 // Precio: $250.000,00
	 auto Auto3 = new auto("Peugeot","208",5,0,250000);
	 //Marca: Yamaha // Modelo: YBR // Cilindrada: 160cc // Precio: $80.500,50
	 auto Auto4 = new auto("Yamaha","YBR",4,160,80500,50);
	 
	 Auto1.mostrarAuto(false);
	 Auto2.mostrarAuto(true);
	 Auto3.mostrarAuto(false);
	 Auto4.mostrarAuto(true);
	 

	 auto [] arrayAutos  = {Auto1,Auto2,Auto3,Auto4};
	 espacio();
	 System.out.println("Vehículo más caro:"+ buscarMasCaro(arrayAutos).getMarcaAuto() + " " + buscarMasCaro(arrayAutos).getModeloAuto());
	}
	
	static void espacio()
	{
		System.out.println("=============================");
	}
	static auto buscarMasCaro(auto[] a)
	{
		auto max = a[0];
		for (int i=1 ; i< a.length; i++)
		{
			if (a[i].precio > max.precio)
			{
				max=a[i];
			}
		}
		return max;
	}

}
